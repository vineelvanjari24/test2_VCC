<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".agent.SavingAccountReports"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saving Account Summary"
        android:textColor="@color/textColor"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textAlignment="center"
        />

<androidx.cardview.widget.CardView
    android:id="@+id/dayWiseAccountSummary"
    android:layout_width="200dp"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:backgroundTint="@color/blue">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Day Wise Account Summary "
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"/>
</androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/monthlyAccountSummary"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:backgroundTint="@color/blue">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Monthly Account Summary "
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>